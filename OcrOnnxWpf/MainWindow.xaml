<Window x:Class="OcrOnnxWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OcrOnnxWpf"
        mc:Ignorable="d"
        Title="RapidOCR文字识别工具" Width="1000" Height="800"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <!-- 第一行：模型配置 -->
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <!-- 模型文件夹路径 -->
        <Label Content="模型文件夹:" Grid.Row="0" Grid.Column="0" Margin="5" VerticalAlignment="Center"/>
        <TextBox x:Name="modelsTextBox" Grid.Row="0" Grid.Column="1" Margin="5" Height="25" VerticalContentAlignment="Center" />
        <Button x:Name="modelsBtn" Content="浏览..." Grid.Row="0" Grid.Column="2" Margin="5" Width="75" Height="25" Click="modelsBtn_Click"/>
        
        <Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Margin="5" VerticalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="80" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            
            <!-- 检测模型名称 -->
            <Label Content="检测模型:" Grid.Row="1" Grid.Column="0" Margin="5" VerticalAlignment="Center"/>
            <TextBox x:Name="detNameTextBox" Grid.Row="1" Grid.Column="1" Margin="5" Height="25" VerticalContentAlignment="Center" />

            <Label Content="方向模型:" Grid.Row="2" Grid.Column="2" Margin="5" VerticalAlignment="Center"/>
            <TextBox x:Name="clsNameTextBox" Grid.Row="2" Grid.Column="3" Margin="5" Height="25" VerticalContentAlignment="Center" />

        </Grid>

        <Grid Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" Margin="5" VerticalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="80" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- 识别模型名称 -->
            <Label Content="识别模型:" Grid.Row="3" Grid.Column="0" Margin="5" VerticalAlignment="Center"/>
            <TextBox x:Name="recNameTextBox" Grid.Row="3" Grid.Column="1" Margin="5" Height="25" VerticalContentAlignment="Center" />

            <!-- 字典文件名称 -->
            <Label Content="字典文件:" Grid.Row="4" Grid.Column="2" Margin="5" VerticalAlignment="Center"/>
            <TextBox x:Name="keysNameTextBox" Grid.Row="4" Grid.Column="3" Margin="5" Height="25" VerticalContentAlignment="Center" />

        </Grid>

        <!-- 第二部分：图片选择和参数设置 -->
        <Grid Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3" Margin="5" VerticalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="90" />
                <ColumnDefinition Width="90" />
                <ColumnDefinition Width="90" />
            </Grid.ColumnDefinitions>

            <!-- 图片路径 -->
            <Label Content="图片路径:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"/>
            <TextBox x:Name="pathTextBox" Grid.Row="0" Grid.Column="1" Height="25" VerticalContentAlignment="Center" />
            <Button x:Name="openBtn" Content="打开图片" Grid.Row="0" Grid.Column="2" Width="80" Height="25" Click="openBtn_Click"/>
            <Button x:Name="initBtn" Content="初始化" Grid.Row="0" Grid.Column="3" Width="80" Height="25" Click="initBtn_Click"/>
            <Button x:Name="detectBtn" Content="开始检测" Grid.Row="0" Grid.Column="4" Width="80" Height="25" Click="detectBtn_Click"/>
        </Grid>
        
        <!-- 参数设置和结果显示区域 -->
        <Grid Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,10,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="300" />
            </Grid.ColumnDefinitions>

            <!-- 图片显示区域 -->
            <GroupBox Header="图片预览" Grid.Row="0" Grid.Column="0" Margin="5">
                <Grid>
                    <Image x:Name="imageControl" Stretch="Uniform" />
                </Grid>
            </GroupBox>

            <!-- 右侧区域：参数设置和结果显示 -->
            <Grid Grid.Row="0" Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                
                <!-- 参数设置区域 -->
                <GroupBox Header="参数设置" Grid.Row="0" Margin="5">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Label Content="线程数:" Grid.Row="0" Grid.Column="0" Margin="5" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="0" Grid.Column="1" x:Name="numThreadNumeric" Text="4" Margin="5" Height="25" VerticalContentAlignment="Center" />

                        <Label Content=" padding:" Grid.Row="1" Grid.Column="0" Margin="5" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="1" Grid.Column="1" x:Name="paddingNumeric" Text="50" Margin="5" Height="25" VerticalContentAlignment="Center" />

                        <Label Content=" maxSideLen:" Grid.Row="2" Grid.Column="0" Margin="5" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="2" Grid.Column="1" x:Name="imgResizeNumeric" Text="960" Margin="5" Height="25" VerticalContentAlignment="Center" />

                        <Label Content=" boxScoreThresh:" Grid.Row="3" Grid.Column="0" Margin="5" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="3" Grid.Column="1" x:Name="boxScoreThreshTextBox" Text="0.5" Margin="5" Height="25" VerticalContentAlignment="Center" />

                        <Label Content=" boxThresh:" Grid.Row="4" Grid.Column="0" Margin="5" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="4" Grid.Column="1" x:Name="boxThreshTextBox" Text="0.3" Margin="5" Height="25" VerticalContentAlignment="Center" />

                        <Label Content=" unClipRatio:" Grid.Row="5" Grid.Column="0" Margin="5" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="5" Grid.Column="1" x:Name="unClipRatioTextBox" Text="2.0" Margin="5" Height="25" VerticalContentAlignment="Center" />

                        <CheckBox x:Name="doAngleCheckBox" Content="doAngle" Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2" Margin="5" HorizontalAlignment="Left" />
                        <CheckBox x:Name="mostAngleCheckBox" Content="mostAngle" Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="2" Margin="5" HorizontalAlignment="Left" />
                        <CheckBox x:Name="partImgCheckBox" Content="显示分割图" Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="2" Margin="5" HorizontalAlignment="Left" Checked="partImgCheckBox_Checked" Unchecked="partImgCheckBox_Unchecked" />
                        <CheckBox x:Name="debugCheckBox" Content="调试模式" Grid.Row="9" Grid.Column="0" Grid.ColumnSpan="2" Margin="5" HorizontalAlignment="Left" Checked="debugCheckBox_Checked" Unchecked="debugCheckBox_Unchecked" />
                    </Grid>
                </GroupBox>

                <!-- 结果显示区域 -->
                <GroupBox Header="识别结果" Grid.Row="1" Margin="5">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                    
                        <Label Content="详细结果:" Grid.Row="0" Margin="5" />
                        <TextBox x:Name="ocrResultTextBox" Grid.Row="1" Margin="5" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" TextWrapping="Wrap" />
                    
                        <Label Content="文本结果:" Grid.Row="2" Margin="5" />
                        <TextBox x:Name="strRestTextBox" Grid.Row="3" Margin="5" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" TextWrapping="Wrap" />
                    </Grid>
                </GroupBox>
            </Grid>
        </Grid>
    </Grid>
</Window>